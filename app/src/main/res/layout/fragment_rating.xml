<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Details"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#ffffff"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*"
                        android:background="#dedcdc">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date : ------"
                                android:id="@+id/txtAppDetDate"
                                android:layout_gravity="left"
                                android:textColor="#040404"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time : -----"
                                android:id="@+id/txtAppDetTime"
                                android:textAlignment="textEnd"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="#ffffff">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:civ_border="false"

                                android:src="@drawable/profile"
                                android:id="@+id/det_practitioner_image"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:visibility="visible" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/det_practitioner_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="-------"
                                    android:textColor="@color/colorTextPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/text_size_list_item_normal"
                                    android:layout_gravity="bottom" />

                                <TextView
                                    android:id="@+id/det_practitioner_language"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="------"
                                    android:textColor="@color/colorTextSecondary"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/det_practitioner_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:drawableLeft="@drawable/ic_class_black_24dp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/text_size_list_item_secondary"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="15dp"
                                android:layout_height="match_parent"></RelativeLayout>

                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_service"
                            android:layout_width="match_parent"
                            android:theme="@style/TextLabel"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/det_service_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Service"
                                android:textColor="@color/colorTextPrimary"
                                android:inputType="none" />
                        </android.support.design.widget.TextInputLayout>




                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_patient"
                            android:layout_width="match_parent"
                            android:theme="@style/TextLabel"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/det_patient_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Patient"
                                android:textColor="@color/colorTextPrimary"
                                android:inputType="none" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_address"
                            android:layout_width="match_parent"
                            android:theme="@style/TextLabel"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/det_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address"
                                android:textColor="@color/colorTextPrimary"
                                android:inputType="none" />
                        </android.support.design.widget.TextInputLayout>





                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#ffffff"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#a7a4a4"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:visibility="gone"></RelativeLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal" >

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/card_background"
                                    android:padding="2dp"
                                    android:id="@+id/linearLayout8"
                                    android:focusable="false"
                                    android:clickable="true">

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/callBtn"
                                        android:src="@drawable/ic_call_80dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="10dp"
                                        android:id="@+id/textView28"
                                        android:textAlignment="center"
                                        android:text="Call"
                                        android:textColor="#1a2e4d"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/card_background"
                                    android:padding="2dp"
                                    android:id="@+id/locLinear" >

                                    <ImageButton
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:id="@+id/locBtn"
                                        android:src="@drawable/ic_pin_drop_black_24dp"
                                        android:background="#00ffffff"
                                        android:layout_margin="5dp"
                                        android:scaleType="fitXY" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Location"
                                        android:id="@+id/textView30"
                                        android:textAlignment="center"
                                        android:textColor="#1a2e4d"
                                        android:singleLine="true" />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal" >

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/card_background"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:id="@+id/LinearResch" >

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/BtnReSch"
                                        android:src="@drawable/ic_reschedule"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="10dp"
                                        android:id="@+id/TxtResch"
                                        android:textAlignment="center"
                                        android:text="Reschedule"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/card_background"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:id="@+id/LinearFav">

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/BtnFav"
                                        android:src="@drawable/ic_favorite_black_24dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Favourite"
                                        android:id="@+id/TxtFav"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal" >

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/card_background"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:id="@+id/LinearConfirm" >

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/BtnCOnfirm"
                                        android:src="@drawable/ic_done_all_black_24dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="10dp"
                                        android:id="@+id/TxtConfirm"
                                        android:textAlignment="center"
                                        android:text="Confirm Completed"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/card_background"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:id="@+id/LinearCancel">

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/BtnCancel"
                                        android:src="@drawable/ic_highlight_remove_24dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cancel"
                                        android:id="@+id/TxtCancel"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>