<resources>

    <style name="TextLabel" parent="ThemeOverlay.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#aba81783</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#aba81783</item>
        <item name="colorControlNormal">#aba81783</item>
        <item name="colorControlActivated">#aba81783</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppointmentDetailsTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTabActive</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/AppointmentDetailsTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTextIcon</item>
    </style>

    <style name="AppointmentDetailsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTabTextNegative</item>
        <item name="android:tint">@color/colorTabTextNegative</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Sphinx.Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Sphinx.Normal" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="DialogWindowTitle.Sphinx" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>

    <style name="alerttheme2" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/colorTextIcon</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <!-- Our customisation -->
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Sphinx</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>5
    </style>

</resources>
